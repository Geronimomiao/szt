<header>
  <text>创建课程</text>
</header>

<view class="cu-card margin-top ">
  <view class="cu-item shadow">
    <view class="cu-bar bg-white solid-bottom">
      <view class='action'>
        <text class='cuIcon-titles text-orange '></text> 教师信息
      </view>
    </view>
    <view class='test'>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class='msg'>{{userInfo.nickName}}</text>
    </view>
  </view>
</view>



<view class="cu-card case">
  <view class="cu-item shadow">
    <view class="cu-form-group">
      <view class="title">教授班级</view>
      <input placeholder="请输入所教授班级"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">课程名称</view>
      <input placeholder="请输入课程名称"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">授课地址</view>
      <input placeholder="请输入授课地址"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">课程简介</view>
      <input placeholder="请输入课程简介"></input>
    </view>
  </view>
</view>


<button class="cu-btn bg-red margin lg block" bindtap='toSuccess'>确认创建</button>